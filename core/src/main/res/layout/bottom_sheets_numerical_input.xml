<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/numbersGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/one"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="1"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/two"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="2"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/three"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="3"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/four"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="4"
                android:textAlignment="center"
                
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/five"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="5"
                android:textAlignment="center"

                
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/six"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="6"
                android:textAlignment="center"

                
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/seven"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="7"
                android:textAlignment="center"

                
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/eight"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="8"
                android:textAlignment="center"

                
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/nine"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="9"
                android:textAlignment="center"
                
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnLeftContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                tools:ignore="HardcodedText">

                <ImageView
                    android:id="@+id/btnLeftIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:clickable="false"
                    android:focusable="false"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <com.maxkeppeler.bottomsheets.core.views.BottomSheetDigit
                android:id="@+id/zero"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btnRightContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bs_ripple_bg_rounded"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnRightIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:clickable="false"
                    android:focusable="false"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>