<resources>

    <!-- Override primary color.   -->
    <attr name="sheetPrimaryColor" format="color" />

    <!-- Override highlight color. Default: Generates color from sheetPrimaryColor or colorPrimary..   -->
    <attr name="sheetHighlightColor" format="color" />

    <!-- Override background color. -->
    <attr name="sheetBackgroundColor" format="color" />

    <!-- Override the divider color. -->
    <attr name="sheetDividerColor" format="color" />

    <!-- Override color of action icons.  -->
    <attr name="sheetIconsColor" format="color" />

    <!-- Override default corner radius.  -->
    <attr name="sheetCornerRadius" format="dimension" />

    <!-- Override default corner family.  -->
    <attr name="sheetCornerFamily" format="enum">
        <enum name="rounded" value="0" />
        <enum name="cut" value="1" />
    </attr>

    <attr name="sheetDisplayCloseButton" format="boolean" />

    <attr name="sheetDisplayHandle" format="boolean" />

    <attr name="sheetDisplayToolbar" format="boolean" />

    <!-- Style for an option in OptionsSheet.  -->
    <declare-styleable name="SheetOption">

        <!-- Override icon color of an active option. Default: sheetPrimaryColor -->
        <attr name="sheetOptionSelectedImageColor" format="color" />

        <!-- Override text color of an active option. Default: sheetPrimaryColor -->
        <attr name="sheetOptionSelectedTextColor" format="color" />

        <!-- Override icon color of an disabled option. Default: sheetIconsColor, colorOnSurface -->
        <attr name="sheetOptionDisabledImageColor" format="color" />

        <!-- Override text color of an disabled option. Default: sheetContentColor, colorTextPrimary -->
        <attr name="sheetOptionDisabledTextColor" format="color" />

        <!-- Override background color of an disabled option. -->
        <attr name="sheetOptionDisabledBackgroundColor" format="color" />

    </declare-styleable>


    <!--  Style for the title.  -->
    <declare-styleable name="SheetTitle">

        <!-- Override title color. Default: sheetPrimaryColor -->
        <attr name="sheetTitleColor" format="color" />

        <!-- Override title font. -->
        <attr name="sheetTitleFont" format="reference" />

        <attr name="sheetTitleLineHeight" format="dimension" />

        <attr name="sheetTitleLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for the content text.  -->
    <declare-styleable name="SheetContent">

        <!-- Override content text color. Default: textColorPrimary -->
        <attr name="sheetContentColor" format="color" />

        <!-- Override content text inverse color. Default: textColorPrimaryInverse -->
        <attr name="sheetContentInverseColor" format="color" />

        <!-- Override primary text font. -->
        <attr name="sheetContentFont" format="reference" />

        <!-- Override content text line height. -->
        <attr name="sheetContentLineHeight" format="dimension" />

        <!-- Override content text letter spacing. -->
        <attr name="sheetContentLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for value text. (Selected date, selected time, ...)  -->
    <declare-styleable name="SheetValue">

        <!-- Override value text color. Default: sheetPrimaryColor -->
        <attr name="sheetValueTextActiveColor" format="color" />

        <!-- Override value text font. -->
        <attr name="sheetValueFont" format="reference" />

        <!-- Override value text line height. -->
        <attr name="sheetValueLineHeight" format="dimension" />

        <!-- Override value text letter spacing. -->
        <attr name="sheetValueLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for the digit keys of the numerical input.  -->
    <declare-styleable name="SheetDigit">

        <!-- Override digit key color. Default: textColorPrimary -->
        <attr name="sheetDigitColor" format="color" />

        <!-- Override digit key text font. -->
        <attr name="sheetDigitFont" format="reference" />

        <!-- Override digit key line height. -->
        <attr name="sheetDigitLineHeight" format="dimension" />

        <!-- Override digit key letter spacing. -->
        <attr name="sheetDigitLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for the buttons.  -->
    <declare-styleable name="SheetButton">

        <!-- Override button color. Default: sheetPrimaryColor -->
        <attr name="sheetButtonColor" format="reference" />

        <!-- Override button text font. -->
        <attr name="sheetButtonTextFont" format="reference" />

        <!-- Override button letter spacing. -->
        <attr name="sheetButtonTextLetterSpacing" format="float" />

        <!-- Override radius of all corners.  -->
        <attr name="sheetButtonCornerRadius" format="dimension" />

        <!-- Override family of all corners.  -->
        <attr name="sheetButtonCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override button width. Default: wrap_content  -->
        <attr name="sheetButtonWidth" format="enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_content" value="-1" />
        </attr>


        <!-- Override outlined button border color. -->
        <attr name="sheetButtonOutlinedButtonBorderColor" format="reference" />

        <!-- Override outlined button border width.  -->
        <attr name="sheetButtonOutlinedButtonBorderWidth" format="dimension" />

    </declare-styleable>

    <!--  Style for the buttons.  -->
    <declare-styleable name="SheetNegativeButton">

        <attr name="sheetNegativeButtonType" format="enum">
            <enum name="text_button" value="0" />
            <enum name="outlined_button" value="1" />
            <enum name="button" value="2" />
        </attr>

        <!-- Override outlined button border color. -->
        <attr name="sheetNegativeButtonOutlinedButtonBorderColor" format="reference" />

        <!-- Override outlined button border width.  -->
        <attr name="sheetNegativeButtonOutlinedButtonBorderWidth" format="dimension" />

        <!-- Override radius of all corners.  -->
        <attr name="sheetNegativeButtonCornerRadius" format="dimension" />

        <!-- Override family of all corners.  -->
        <attr name="sheetNegativeButtonCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom left corner radius.  -->
        <attr name="sheetNegativeButtonBottomLeftCornerRadius" format="dimension" />

        <!-- Override bottom left corner family.  -->
        <attr name="sheetNegativeButtonBottomLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top left corner radius.  -->
        <attr name="sheetNegativeButtonTopLeftCornerRadius" format="dimension" />

        <!-- Override top left corner family.  -->
        <attr name="sheetNegativeButtonTopLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom right corner radius.  -->
        <attr name="sheetNegativeButtonBottomRightCornerRadius" format="dimension" />

        <!-- Override top bottom corner family.  -->
        <attr name="sheetNegativeButtonBottomRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top right corner radius.  -->
        <attr name="sheetNegativeButtonTopRightCornerRadius" format="dimension" />

        <!-- Override top right corner family.  -->
        <attr name="sheetNegativeButtonTopRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

    </declare-styleable>

    <!--  Style for the buttons.  -->
    <declare-styleable name="SheetPositiveButton">

        <attr name="sheetPositiveButtonType" format="enum">
            <enum name="text_button" value="0" />
            <enum name="outlined_button" value="1" />
            <enum name="button" value="2" />
        </attr>

        <!-- Override outlined button border color. -->
        <attr name="sheetPositiveButtonOutlinedButtonBorderColor" format="reference" />

        <!-- Override outlined button border width.  -->
        <attr name="sheetPositiveButtonOutlinedButtonBorderWidth" format="dimension" />

        <!-- Override radius of all corners.  -->
        <attr name="sheetPositiveButtonCornerRadius" format="dimension" />

        <!-- Override family of all corners.  -->
        <attr name="sheetPositiveButtonCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom left corner radius.  -->
        <attr name="sheetPositiveButtonBottomLeftCornerRadius" format="dimension" />

        <!-- Override bottom left corner family.  -->
        <attr name="sheetPositiveButtonBottomLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top left corner radius.  -->
        <attr name="sheetPositiveButtonTopLeftCornerRadius" format="dimension" />

        <!-- Override top left corner family.  -->
        <attr name="sheetPositiveButtonTopLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom right corner radius.  -->
        <attr name="sheetPositiveButtonBottomRightCornerRadius" format="dimension" />

        <!-- Override top bottom corner family.  -->
        <attr name="sheetPositiveButtonBottomRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top right corner radius.  -->
        <attr name="sheetPositiveButtonTopRightCornerRadius" format="dimension" />

        <!-- Override top right corner family.  -->
        <attr name="sheetPositiveButtonTopRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

    </declare-styleable>

    <!--  Style for the handle.  -->
    <declare-styleable name="SheetHandle">

        <!-- Override handle width.  -->
        <attr name="sheetHandleWidth" format="dimension" />

        <!-- Override handle height.  -->
        <attr name="sheetHandleHeight" format="dimension" />

        <!-- Override handle fill color. -->
        <attr name="sheetHandleFillColor" format="reference|color" />

        <!-- Override handle border color. -->
        <attr name="sheetHandleBorderColor" format="reference" />

        <!-- Override handle border width.  -->
        <attr name="sheetHandleBorderWidth" format="dimension" />

        <!-- Override handle corner radius.  -->
        <attr name="sheetHandleCornerRadius" format="dimension" />

        <!-- Override handle corner family.  -->
        <attr name="sheetHandleCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

    </declare-styleable>

    <!--  Style for the handle.  -->
    <declare-styleable name="SheetTextInputLayout">

        <!-- Override handle corner radius.  -->
        <attr name="sheetTextInputLayoutCornerRadius" format="dimension" />

        <!-- Override bottom left corner radius.  -->
        <attr name="sheetTextInputLayoutBottomLeftCornerRadius" format="dimension" />

        <!-- Override top left corner radius.  -->
        <attr name="sheetTextInputLayoutTopLeftCornerRadius" format="dimension" />

        <!-- Override bottom right corner radius.  -->
        <attr name="sheetTextInputLayoutBottomRightCornerRadius" format="dimension" />

        <!-- Override top right corner radius.  -->
        <attr name="sheetTextInputLayoutTopRightCornerRadius" format="dimension" />

        <!-- Override end icon color. Default: sheetPrimaryColor, colorPrimary  -->
        <attr name="sheetTextInputLayoutEndIconColor" format="color" />

        <!-- Override helper text color. Default: sheetPrimaryColor, colorPrimary  -->
        <attr name="sheetTextInputLayoutHelperTextColor" format="color" />

        <!-- Override box stroke color. Default: sheetPrimaryColor, colorPrimary  -->
        <attr name="sheetTextInputLayoutBoxStrokeColor" format="color" />

        <!-- Override hint text color. Default: sheetPrimaryColor, colorPrimary  -->
        <attr name="sheetTextInputLayoutHintTextColor" format="color" />

        <!-- Override box stroke error color.  -->
        <attr name="sheetTextInputLayoutBoxStrokeErrorColor" format="color" />

        <!-- Override error text color.  -->
        <attr name="sheetTextInputLayoutErrorTextColor" format="color" />

        <!-- Override error drawable color.  -->
        <attr name="sheetTextInputLayoutErrorDrawableColor" format="color" />

    </declare-styleable>

</resources>