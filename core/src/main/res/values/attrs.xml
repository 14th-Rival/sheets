<resources>

    <!-- Override primary color.   -->
    <attr name="bottomSheetPrimaryColor" format="color" />

    <!-- Override highlight color. Default: Generates color from bottomSheetPrimaryColor or colorPrimary..   -->
    <attr name="bottomSheetHighlightColor" format="color" />

    <!-- Override background color. -->
    <attr name="bottomSheetBackgroundColor" format="color" />

    <!-- Override the divider color. -->
    <attr name="bottomSheetDividerColor" format="color" />

    <!-- Override color of action icons.  -->
    <attr name="bottomSheetIconsColor" format="color" />

    <!-- Override default corner radius.  -->
    <attr name="bottomSheetCornerRadius" format="dimension" />

    <!-- Override default corner family.  -->
    <attr name="bottomSheetCornerFamily" format="enum">
        <enum name="rounded" value="0" />
        <enum name="cut" value="1" />
    </attr>

    <attr name="bottomSheetDisplayCloseButton" format="boolean" />

    <attr name="bottomSheetDisplayHandle" format="boolean" />

    <attr name="bottomSheetDisplayToolbar" format="boolean" />

    <!-- Style for an option in OptionsSheet.  -->
    <declare-styleable name="BottomSheetOption">

        <!-- Override icon color of an active option. Default: bottomSheetPrimary -->
        <attr name="bottomSheetOptionSelectedImageColor" format="color" />

        <!-- Override text color of an active option. Default: bottomSheetPrimary -->
        <attr name="bottomSheetOptionSelectedTextColor" format="color" />

        <!-- Override icon color of an disabled option. Default: bottomSheetIconsColor, colorOnSurface -->
        <attr name="bottomSheetOptionDisabledImageColor" format="color" />

        <!-- Override text color of an disabled option. Default: bottomSheetContentColor, colorTextPrimary -->
        <attr name="bottomSheetOptionDisabledTextColor" format="color" />

        <!-- Override background color of an disabled option. -->
        <attr name="bottomSheetOptionDisabledBackgroundColor" format="color" />

    </declare-styleable>


    <!--  Style for the title.  -->
    <declare-styleable name="BottomSheetTitle">

        <!-- Override title color. Default: bottomSheetPrimary -->
        <attr name="bottomSheetTitleColor" format="color" />

        <!-- Override title font. -->
        <attr name="bottomSheetTitleFont" format="reference" />

        <attr name="bottomSheetTitleLineHeight" format="dimension" />

        <attr name="bottomSheetTitleLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for the content text.  -->
    <declare-styleable name="BottomSheetContent">

        <!-- Override content text color. Default: textColorPrimary -->
        <attr name="bottomSheetContentColor" format="color" />

        <!-- Override content text inverse color. Default: textColorPrimaryInverse -->
        <attr name="bottomSheetContentInverseColor" format="color" />

        <!-- Override primary text font. -->
        <attr name="bottomSheetContentFont" format="reference" />

        <!-- Override content text line height. -->
        <attr name="bottomSheetContentLineHeight" format="dimension" />

        <!-- Override content text letter spacing. -->
        <attr name="bottomSheetContentLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for value text. (Selected date, selected time, ...)  -->
    <declare-styleable name="BottomSheetValue">

        <!-- Override value text color. Default: bottomSheetPrimary -->
        <attr name="bottomSheetValueTextActiveColor" format="color" />

        <!-- Override value text font. -->
        <attr name="bottomSheetValueFont" format="reference" />

        <!-- Override value text line height. -->
        <attr name="bottomSheetValueLineHeight" format="dimension" />

        <!-- Override value text letter spacing. -->
        <attr name="bottomSheetValueLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for the digit keys of the numerical input.  -->
    <declare-styleable name="BottomSheetDigit">

        <!-- Override digit key color. Default: textColorPrimary -->
        <attr name="bottomSheetDigitColor" format="color" />

        <!-- Override digit key text font. -->
        <attr name="bottomSheetDigitFont" format="reference" />

        <!-- Override digit key line height. -->
        <attr name="bottomSheetDigitLineHeight" format="dimension" />

        <!-- Override digit key letter spacing. -->
        <attr name="bottomSheetDigitLetterSpacing" format="float" />

    </declare-styleable>


    <!--  Style for the buttons.  -->
    <declare-styleable name="BottomSheetButton">

        <!-- Override button color. Default: bottomSheetPrimary -->
        <attr name="bottomSheetButtonColor" format="reference" />

        <!-- Override button text font. -->
        <attr name="bottomSheetButtonTextFont" format="reference" />

        <!-- Override button letter spacing. -->
        <attr name="bottomSheetButtonTextLetterSpacing" format="float" />

        <!-- Override radius of all corners.  -->
        <attr name="bottomSheetButtonCornerRadius" format="dimension" />

        <!-- Override family of all corners.  -->
        <attr name="bottomSheetButtonCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override button width. Default: wrap_content  -->
        <attr name="bottomSheetButtonWidth" format="enum">
            <enum name="wrap_content" value="-2" />
            <enum name="match_content" value="-1" />
        </attr>

    </declare-styleable>

    <!--  Style for the buttons.  -->
    <declare-styleable name="BottomSheetNegativeButton">

        <attr name="bottomSheetNegativeButtonType" format="enum">
            <enum name="text_button" value="0" />
            <enum name="outlined_button" value="1" />
            <enum name="button" value="2" />
        </attr>

        <!-- Override radius of all corners.  -->
        <attr name="bottomSheetNegativeButtonCornerRadius" format="dimension" />

        <!-- Override family of all corners.  -->
        <attr name="bottomSheetNegativeButtonCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom left corner radius.  -->
        <attr name="bottomSheetNegativeButtonBottomLeftCornerRadius" format="dimension" />

        <!-- Override bottom left corner family.  -->
        <attr name="bottomSheetNegativeButtonBottomLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top left corner radius.  -->
        <attr name="bottomSheetNegativeButtonTopLeftCornerRadius" format="dimension" />

        <!-- Override top left corner family.  -->
        <attr name="bottomSheetNegativeButtonTopLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom right corner radius.  -->
        <attr name="bottomSheetNegativeButtonBottomRightCornerRadius" format="dimension" />

        <!-- Override top bottom corner family.  -->
        <attr name="bottomSheetNegativeButtonBottomRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top right corner radius.  -->
        <attr name="bottomSheetNegativeButtonTopRightCornerRadius" format="dimension" />

        <!-- Override top right corner family.  -->
        <attr name="bottomSheetNegativeButtonTopRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

    </declare-styleable>

    <!--  Style for the buttons.  -->
    <declare-styleable name="BottomSheetPositiveButton">

        <attr name="bottomSheetPositiveButtonType" format="enum">
            <enum name="text_button" value="0" />
            <enum name="outlined_button" value="1" />
            <enum name="button" value="2" />
        </attr>

        <!-- Override radius of all corners.  -->
        <attr name="bottomSheetPositiveButtonCornerRadius" format="dimension" />

        <!-- Override family of all corners.  -->
        <attr name="bottomSheetPositiveButtonCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom left corner radius.  -->
        <attr name="bottomSheetPositiveButtonBottomLeftCornerRadius" format="dimension" />

        <!-- Override bottom left corner family.  -->
        <attr name="bottomSheetPositiveButtonBottomLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top left corner radius.  -->
        <attr name="bottomSheetPositiveButtonTopLeftCornerRadius" format="dimension" />

        <!-- Override top left corner family.  -->
        <attr name="bottomSheetPositiveButtonTopLeftCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override bottom right corner radius.  -->
        <attr name="bottomSheetPositiveButtonBottomRightCornerRadius" format="dimension" />

        <!-- Override top bottom corner family.  -->
        <attr name="bottomSheetPositiveButtonBottomRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

        <!-- Override top right corner radius.  -->
        <attr name="bottomSheetPositiveButtonTopRightCornerRadius" format="dimension" />

        <!-- Override top right corner family.  -->
        <attr name="bottomSheetPositiveButtonTopRightCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

    </declare-styleable>

    <!--  Style for the handle.  -->
    <declare-styleable name="BottomSheetHandle">

        <!-- Override handle width.  -->
        <attr name="bottomSheetHandleWidth" format="dimension" />

        <!-- Override handle height.  -->
        <attr name="bottomSheetHandleHeight" format="dimension" />

        <!-- Override handle fill color. -->
        <attr name="bottomSheetHandleFillColor" format="reference|color" />

        <!-- Override handle border color. -->
        <attr name="bottomSheetHandleBorderColor" format="reference" />

        <!-- Override handle border width.  -->
        <attr name="bottomSheetHandleBorderWidth" format="dimension" />

        <!-- Override handle corner radius.  -->
        <attr name="bottomSheetHandleCornerRadius" format="dimension" />

        <!-- Override handle corner family.  -->
        <attr name="bottomSheetHandleCornerFamily" format="enum">
            <enum name="rounded" value="0" />
            <enum name="cut" value="1" />
        </attr>

    </declare-styleable>

    <!--  Style for the handle.  -->
    <declare-styleable name="BottomSheetTextInputLayout">

        <!-- Override handle corner radius.  -->
        <attr name="bottomSheetTextInputLayoutCornerRadius" format="dimension" />

        <!-- Override bottom left corner radius.  -->
        <attr name="bottomSheetTextInputLayoutBottomLeftCornerRadius" format="dimension" />

        <!-- Override top left corner radius.  -->
        <attr name="bottomSheetTextInputLayoutTopLeftCornerRadius" format="dimension" />

        <!-- Override bottom right corner radius.  -->
        <attr name="bottomSheetTextInputLayoutBottomRightCornerRadius" format="dimension" />

        <!-- Override top right corner radius.  -->
        <attr name="bottomSheetTextInputLayoutTopRightCornerRadius" format="dimension" />

        <!-- Override end icon color. Default: bottomSheetPrimaryColor, colorPrimary  -->
        <attr name="bottomSheetTextInputLayoutEndIconColor" format="color" />

        <!-- Override helper text color. Default: bottomSheetPrimaryColor, colorPrimary  -->
        <attr name="bottomSheetTextInputLayoutHelperTextColor" format="color" />

        <!-- Override box stroke color. Default: bottomSheetPrimaryColor, colorPrimary  -->
        <attr name="bottomSheetTextInputLayoutBoxStrokeColor" format="color" />

        <!-- Override hint text color. Default: bottomSheetPrimaryColor, colorPrimary  -->
        <attr name="bottomSheetTextInputLayoutHintTextColor" format="color" />

        <!-- Override box stroke error color.  -->
        <attr name="bottomSheetTextInputLayoutBoxStrokeErrorColor" format="color" />

        <!-- Override error text color.  -->
        <attr name="bottomSheetTextInputLayoutErrorTextColor" format="color" />

    </declare-styleable>

</resources>